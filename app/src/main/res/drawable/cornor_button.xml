<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="35dip" />
            <stroke android:width="1dip" android:color="#fad000" />
            <gradient android:angle="-90" android:startColor="#fad000" android:endColor="#fad000"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="35dip" />
            <stroke android:width="1dip" android:color="#fad000" />
            <solid android:color="#fad000"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="200dip" />
            <stroke android:width="1dip" android:color="#fad000" />
            <gradient android:angle="-90" android:startColor="#fad000" android:endColor="#fad000" />
        </shape>
    </item>
</selector>