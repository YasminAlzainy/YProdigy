<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.karim.prodigyv1.MainActivity"
    android:background="@drawable/background"
    android:weightSum="100"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/map_background"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="33dp"
                android:layout_marginStart="33dp"
                android:layout_marginTop="156dp"
                app:srcCompat="@drawable/pin1" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignLeft="@+id/imageView6"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/imageView6"
                android:layout_marginTop="34dp"
                app:srcCompat="@drawable/pin1" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageView4"
                android:layout_marginEnd="76dp"
                android:layout_marginRight="76dp"
                android:layout_marginTop="52dp"
                app:srcCompat="@drawable/pin1" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#131E29"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/imageView6"
                android:layout_alignLeft="@+id/linearLayout2"
                android:layout_alignStart="@+id/linearLayout2"
                >

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/imageView6"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    app:srcCompat="@drawable/msg_box"

                    />

                <EditText
                    android:id="@+id/text_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="21dp"
                    android:layout_marginStart="21dp"
                    android:background="#00FFFFFF"
                    android:hint="Email address"
                    android:textColor="#ffffff"
                    android:textColorHint="#808080" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:background="#131E29"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:layout_marginRight="15dp">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    app:srcCompat="@drawable/password_lock" />

                <EditText
                    android:id="@+id/text_passowrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="21dp"
                    android:layout_marginStart="21dp"
                    android:background="#00FFFFFF"
                    android:hint="password"
                    android:inputType="textPassword"
                    android:textColor="#ffffff"
                    android:textColorHint="#808080" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="29dp"
                    android:layout_toEndOf="@+id/imageView4"
                    android:layout_toRightOf="@+id/imageView4"
                    android:background="@drawable/cornor_button"
                    android:text="Log in"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_forget_passord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="#00FFFFFF"
                    android:text="Forget Password"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />

                <Button
                    android:id="@+id/SignUp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_button"
                    android:onClick="SignUpClick"
                    android:text="Sign Up"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />



            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
