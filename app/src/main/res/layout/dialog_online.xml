<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/round_rectangle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/profile_relativelayout"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">
    </LinearLayout>
    <GridLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/memories_img"
        android:layout_column="0"
        android:layout_row="0"
        android:id="@+id/img_view_memories"
        android:layout_marginLeft="40dp"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/loction_img"
            android:layout_column="1"
            android:layout_row="0"
            android:id="@+id/img_view_location"
            android:layout_marginRight="40dp"
            android:layout_gravity="end"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/temory_img"
            android:layout_column="0"
            android:layout_row="1"
            android:id="@+id/img_view_temory"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/event_img"
            android:layout_column="1"
            android:layout_row="1"
            android:id="@+id/img_view_event"
            android:layout_marginRight="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/setting_img"
            android:layout_column="0"
            android:layout_row="2"
            android:id="@+id/img_view_setting"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/snipes_img"
            android:layout_column="1"
            android:layout_row="2"
            android:id="@+id/img_view_snipes"
            android:layout_marginRight="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"/>
    </GridLayout>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img_viw_cross"
        android:src="@drawable/cross_img"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>